        <div class="wrapper_user__header">
            <a class="user__header">
                <img href="" src="<%= avatar %>" class="icon__header avatar"></img>
                <p class="name__header">
                    <%= name %>
                </p>
            </a>
            <div class="modal_user__header">
                <a href="">アカウント設定</a>
                <a href="/">ログアウト</a>
            </div>
        </div>
        <!-- <div class="bg_modal"></div> -->

        <button class="create__header" onclick="location.href='/build-page'">作成</button>
    </div>

    <script>
        const icon = document.querySelector(".user__header img");
        const name = document.querySelector(".user__header p");
        const modal = document.querySelector(".modal_user__header");
        const notmodal = document.querySelector(":not(.modal_user__header)");

        notmodal.onclick = function (event) {
            if (event.target == icon || event.target == name) {
                modal.classList.add("open_user__header");
                return;
            };
            modal.classList.remove("open_user__header");

        }

    </script>
